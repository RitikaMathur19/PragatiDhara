<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White fill with subtle grey border and rounded corners -->
    <solid android:color="@color/white" />

    <!-- subtle border to look professional -->
    <stroke
        android:width="1dp"
        android:color="@color/grey_100" />

    <corners android:radius="8dp" />

    <!-- inner padding so text doesn't touch edges -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
