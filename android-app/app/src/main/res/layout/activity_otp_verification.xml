<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OtpVerificationActivity">

    <!-- Top header bar with small logo and app title (same as activity_user_name) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:background="@color/green_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_small_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/pragatidhara_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/screen_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Main content container with light green background look (matches activity_user_name) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:background="@color/green_200"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_signup_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_heading"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/grey_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_signup_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_step_2"
            android:textSize="14sp"
            android:textColor="@color/grey_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_signup_heading"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_call_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/verification_label"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/grey_900"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_signup_step"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" />

        <!-- Keep the existing country+mobile row but style it like the rounded input in activity_user_name -->
        <LinearLayout
            android:id="@+id/ll_country_mobile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_edittext_background"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_call_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tv_mobile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number_label"
                android:textSize="14sp"
                android:textColor="@color/grey_900"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinner_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_mobile_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/mobile_number_label"
                android:inputType="phone"
                android:maxLength="10"
                android:autofillHints="phone"
                android:background="@android:color/transparent"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textColor="@color/grey_900" />
        </LinearLayout>

        <!-- Send OTP button (styled like continue button and anchored near bottom) -->
        <Button
            android:id="@+id/btn_send_otp"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/send_otp"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_500"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ll_country_mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_button_background" />

        <!-- OTP input (hidden initially) -->
        <EditText
            android:id="@+id/et_otp"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:hint="@string/enter_otp"
            android:inputType="number"
            android:maxLength="6"
            android:visibility="gone"
            android:autofillHints="sms_otp"
            android:background="@drawable/rounded_edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_send_otp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Verify OTP button (hidden initially) -->
        <Button
            android:id="@+id/btn_verify_otp"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/verify_otp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_500"
            android:stateListAnimator="@null"
            android:background="@drawable/rounded_button_background"
            app:layout_constraintTop_toBottomOf="@+id/et_otp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Resend OTP text (hidden initially) -->
        <TextView
            android:id="@+id/tv_resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/resend_otp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify_otp"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>