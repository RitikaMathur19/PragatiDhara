<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VehicleDetailsActivity">

    <!-- Top header bar with small logo and app title (same as other activities) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:background="@color/green_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_small_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/pragatidhara_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/screen_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Content area styled like OTP verification (light green surface) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:background="@color/green_200"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_vehicle_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_heading"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/grey_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_vehicle_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_step"
            android:textSize="14sp"
            android:textColor="@color/grey_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_vehicle_heading"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_vehicle_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_label"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/grey_900"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_vehicle_step"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Vehicle registration field styled like rounded input used elsewhere -->
        <EditText
            android:id="@+id/et_vehicle_reg_number"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="@string/vehicle_reg_hint"
            android:inputType="textCapCharacters"
            android:background="@drawable/rounded_edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:autofillHints="postalAddress"
            android:textColor="@color/grey_900"
            app:layout_constraintTop_toBottomOf="@id/tv_vehicle_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:elevation="4dp" />

        <!-- Chasis number field -->
        <EditText
            android:id="@+id/et_chasis_number"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:hint="@string/chasis_hint"
            android:inputType="text"
            android:maxLength="5"
            android:autofillHints="postalAddress"
            android:background="@drawable/rounded_edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/grey_900"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_vehicle_reg_number" />

        <!-- Fetch details button -->
        <Button
            android:id="@+id/btn_fetch_details"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="18dp"
            android:text="@string/fetch_vehicle_details"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_background"
            android:stateListAnimator="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_chasis_number" />

        <!-- Vehicle details card (hidden by default) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/vehicle_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/btn_fetch_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/ll_vehicle_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vehicle_make_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_make_model_label"
                    android:textColor="@color/grey_900" />

                <TextView
                    android:id="@+id/tv_fuel_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fuel_type_label" />

                <TextView
                    android:id="@+id/tv_engine_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/engine_capacity_label" />

                <TextView
                    android:id="@+id/tv_registration_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_date_label" />

                <TextView
                    android:id="@+id/tv_puc_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/puc_expiry_label" />

                <TextView
                    android:id="@+id/tv_emission_levels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emission_levels_label" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>