<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PragatiDhara"
        tools:targetApi="31">
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PragatiDhara.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/Theme.PragatiDhara.Login"/>
        <activity
            android:name=".activity.UserNameActivity"
            android:theme="@style/Theme.PragatiDhara.Login" />
        <activity android:name=".activity.OtpVerificationActivity"
            android:theme="@style/Theme.PragatiDhara.Login"/>
        <activity android:name=".activity.VehicleDetailsActivity"
            android:theme="@style/Theme.PragatiDhara.Login"/>
        <activity android:name=".activity.MainActivity"/>
    </application>

</manifest>